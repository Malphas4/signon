<% content_for :title, "Update permissions for #{@application.name}" %>

<% content_for :breadcrumbs,
   render("govuk_publishing_components/components/breadcrumbs", {
     collapse_on_mobile: true,
     breadcrumbs: [
       {
         title: "Dashboard",
         url: root_path,
       },
       {
         title: "GOV.UK apps",
         url: account_applications_path,
       },
       {
         title: "Update permissions for #{@application.name}",
       },
     ]
   })
%>

<%= form_tag account_application_permissions_path(@application), method: :patch do |f| %>
  <%= render "govuk_publishing_components/components/checkboxes", {
      name: "application[permissions][]",
      heading: "Permissions",
      items: @permissions.map { |permission| { label: permission.name, value: permission.name, checked: current_user.has_permission?(permission) } },
  } %>

  <%= render "govuk_publishing_components/components/button", {
      text: "Update permissions"
  } %>
<% end %>
